{
  "name": "template",
  "version": "0.0.1",
  "main": "lib/index.js",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "test": "jest --detectOpenHandles --passWithNoTests",
    "prebuild": "rimraf lib",
    "build": "tsc",
